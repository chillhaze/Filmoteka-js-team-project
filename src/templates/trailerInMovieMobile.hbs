<div class="thumb-wrap">
   <button data-name='trailer-close' class="modal-trailer__btn--close visually-hidden" type='button'>close</button>
   {{#if linkEmbed}}
   <iframe class = "modal-movie__video" src="{{linkEmbed}}?autoplay=true&width=400" width="400" height="180" allowfullscreen="true" mozallowfullscreen="true"
      webkitallowfullscreen="true" frameborder="no" scrolling="no"></iframe>
   {{/if}}
   {{#unless linkEmbed}}
   <img class = "modal-movie__video" src="https://dummyimage.com/320x180/f7f7f7/ff6b08.png&text=Sorry,+no+trailer+available." alt="{{title}}"
      width="320" height="180" class="movie-card__poster">
   {{/unless}}
</div>